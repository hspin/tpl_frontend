{
  "name": "",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "setup": "npm-run-all setup:node setup:bower setup:fonts wrap",
    "setup:node": "npm install",
    "setup:bower": "bower install --config.interactive=false",
    "setup:fonts": "cpy bower_components/bootstrap/dist/fonts/* app/preview/fonts/",
    "wrap": "npm shrinkwrap",
    "clean:tmp": "rimraf ./app/jade/tmp && mkdirp ./app/jade/tmp",
    "bower": "npm-run-all clean:tmp bower:1run bower:2run bower:3run bower:usemin bower:4run bower:clean",
    "bower:1run": "mkdirp app/preview && mkdirp app/preview/imgs && cpy app/jade/frame/.master.jade app/jade/tmp",
    "bower:2run": "wiredep --devDependencies -s app/jade/tmp/.master.jade",
    "bower:3run": "gulp rename-mv",
    "bower:4run": "gulp rename-layout",
    "bower:usemin": "gulp usemin",
    "bower:clean": "rimraf ./app/preview/working.jade && rimraf -rf ./app/jade/tmp ",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "karma start",
    "lint": "eslint src",
    "jscs": "jscs src/*.js",
    "csscomb": "csscomb src/css --verbose",
    "dev-jade": "jade -P -w ./app/jade/ --out ./app/preview/",
    "dev-stylus": "stylus -u nib -u axis-css -u autoprefixer-stylus -u rupture -u jeet -w ./app/stylus/main.styl --out ./app/preview/css/styles.css",
    "dev-serve": "browser-sync start --port 3000 --server ./app/preview --files \"./app/preview/css/*.css\" --files \"./app/preview/*.html\"",
    "build:clean": "rimraf ./build && mkdirp ./build && mkdirp ./build/css && mkdirp ./build/js && mkdirp ./build/fonts && mkdirp ./build/imgs",
    "build:copy-1": "cpy ./app/preview/fonts/* ./build/fonts/ && cpy ./app/preview/js/vendor.js ./build/js/ && cpy ./app/preview/js/app.js ./build/js/",
    "build:copy-2": "cpy ./app/preview/css/vendor.css ./build/css/ && cpy ./app/preview/imgs/* ./build/imgs/",
    "build:stylus": "stylus -u nib -u axis-css -u autoprefixer-stylus -u rupture -u jeet ./app/stylus/main.styl --out ./build/css/styles.css",
    "build:jade": "jade -P ./app/jade/ --out ./build/",
    "build:minify": "npm-run-all --parallel build:ugly-1 build:ugly-2 build:cssmin",
    "build:ugly-1": "uglifyjs ./build/js/vendor.js --compress --output ./build/js/vendor.js",
    "build:ugly-2": "uglifyjs ./build/js/app.js --screw-ie8 --compress --mangle --output ./build/js/app.js",
    "build:cssmin": "gulp minify-css",
    "build": "cross-env NODE_ENV=production npm-run-all build:clean build:copy-1 build:copy-2 build:stylus build:jade build:minify",
    "build-serve": "browser-sync start --port 3000 --server ./build"
  },
  "dependencies": {
    "cpy": "^4.0.0",
    "cpy-cli": "^1.0.0",
    "cross-env": "^1.0.7",
    "gulp": "^3.9.1",
    "gulp-cssnano": "^2.1.1",
    "gulp-jade-usemin": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.5.1",
    "rimraf": "^2.5.1",
    "shrinkwrap": "^0.4.0",
    "uglify-js": "^2.6.1",
    "wiredep": "^3.0.0"
  }
}
